<style>
  .abc{
    border-radius: 10px;
    padding: 0.5rem;
    outline: none;
    border: none;
  }
  .abc:hover{
    background-color: rgb(103, 179, 234)!important;
  }
</style>
<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Urban Heaven</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
              <input name="username" id="username" placeholder="Enter your username...." type="text" class="form-control" required/> 
              <div class="valid-feedback">Username looks good to go</div>  
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
              <input name="email" id="email" placeholder="Enter your email...." type="email" class="form-control" required/> 
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
              <input name="password" id="password" placeholder="Enter your password...." type="password" class="form-control" required/> 
            </div>
            <button class="abc" style="background-color: rgb(115, 206, 234);">Signup</button>
        </form>
    </div>
</div>