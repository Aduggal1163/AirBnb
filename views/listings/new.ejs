<style>
  .abc{
    background-color: rgb(69, 207, 232);
    border-radius: 0.5rem;
    outline: none;
    border: none;
    padding: 0.5rem;
    width: 4.6rem;
  }
</style>
<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <body>
      <br />
      <h3>Add your Airbnb</h3>
      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            placeholder="Add a spicy title...."
            type="text"
            class="form-control"
            required
          />

          <div class="invalid-feedback">Please enter Title</div>
          <div class="valid-feedback">Title looks solid</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="What do you waaana talk aboutt....."
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
          <div class="valid-feedback">Description looks good</div>
        </div>        
        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input
            name="listing[image]"
            type="file"
            class="form-control"
            required
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              placeholder="enter price"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter valid price</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              name="listing[country]"
              placeholder="India"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter country name</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            name="listing[location]"
            placeholder="Nabha,Punjab"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter location</div>
        </div>
        <br />
        <button class="abc">Add</button>
      </form>
      <br />
    </body>
  </div>
</div>
